<%= form_for([:admins, flight_class]) do |form| %>
  <%= form.hidden_field :flight_id, value: flight_class.flight_id %>

  <% if flight_class.errors.any? %>
    <div class="text-danger">
      <p>
        <%= validation_errors_t(resource_klass, flight_class.errors.count) %>      
      </p>

      <ul>
        <% flight_class.errors.each do |error| %>
          <li><%= error.full_message %></li>
        <% end %>
      </ul>
    </div>
  <% end %>

  <div class="mb-3">
    <%= form.label :seat_price, class: 'form-label' %>
    <%= form.text_field :seat_price, class: 'form-control' %>
  </div>  

  <%= form.submit t('save'), class: 'btn btn-primary' %>
<% end %>

<%= render "shared/breadcrumbs", current_page: :admins_flights  %>

<div class="row">
  <div class="col"><h3>Flights List</h3></div>
  <div class="col-auto">
    <%= link_to "New flight", new_admins_flight_path, class: "btn btn-primary" %>
  </div>
</div>

<table class="table table-hover mt-2">
  <thead>
    <tr>
      <th scope="col">ID</th>
      <th scope="col">Name</th>
      <th scope="col">Seats Ready</th>
      <th scope="col">Aeroplane</th>
      <th scope="col">Departure Date</th>
      <th scope="col"> - </th>
    </tr>
  </thead>
  <tbody>
    <% @flights.each do |flight| %>
      <tr>
        <th scope="row"><%= flight.id %></th>
        <td><%= flight.name %></td>
        <td><%= flight.seats_ready ? 'yes' : 'no' %></td>
        <td><%= flight.aeroplane.name %></td>
        <td><%= flight.departure_date %></td>
        <td><%= link_to "Show", [:admins, flight] %></td>
      </tr>
    <% end %>
  </tbody>
</table>

<%= render "shared/breadcrumbs", current_page: :admins_flights  %>

<div class="row">
  <div class="col"><h3><%= crud_t(resource_klass, :index) %></h3></div>
  <div class="col-auto">
    <%= link_to crud_t(resource_klass, :new), new_admins_flight_path, class: "btn btn-primary" %>
  </div>
</div>

<table class="table table-hover mt-2">
  <thead>
    <tr>
      <% %i[id name seats_ready departure_date].each do |attr_name|  %>
        <th scope="col"><%= resource_klass.human_attribute_name(attr_name) %></th>
      <% end %>
      <th scope="col"><%= Aeroplane.human_attribute_name(:name) %></th>
      <th scope="col"> - </th>
    </tr>
  </thead>
  <tbody>
    <% @flights.each do |flight| %>
      <tr>
        <th scope="row"><%= flight.id %></th>
        <td><%= flight.name %></td>
        <td><%= seats_status(flight) %></td>
        <td><%= flight.departure_date %></td>
        <td><%= flight.aeroplane.name %></td>
        <td><%= link_to t('show'), [:admins, flight] %></td>
      </tr>
    <% end %>
  </tbody>
</table>
